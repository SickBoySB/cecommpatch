<container type="vertbox" hsp="expand" vsp="minimum" name="contentsVB">

	<container type="horizbox"
			hsp="expand" vsp="minimum"
			horizontal_margin="15"
			solidfill="1" solidfillname="cecommPaperRoundInsideNoBottom"
			vertical_padding="0">
		<container type="horizbox" vap="center" hap="center" vsp="minimum" hsp="minimum">
			<imagebutton name="BuildingIcon" text="Building Icon"
					   hsp="minimum" vsp="minimum"
					   imageSkin="ui/orderIcons.xml" image="naturalism_icon" imgPctX="80" imgPctY="80" vertical_margin="8">
				
				<tooltip width="120" height="25" mouseRestDelay="0" followCursor="1">
					<container type="vertbox" hsp="expand" vsp="expand"
							 horizontal_padding="4" vertical_padding="4"
							 solidfill="1" solidfillname="glassBrassBorderDark">
						
						<label name="buttonTooltipLabel" text="Focus on Building" vsp="center" state="tooltip_text"/>
					</container>
				</tooltip>
			</imagebutton>
			
			<container type="vertbox" hsp="expand" vsp="expand" name="demolishBox" vertical_margin="4" horizontal_margin="5">
				<container type="vertbox" hsp="expand" vsp="minimum"
						 name="buildingFancyName" hap="center"
						 horizontal_padding="2"/>
						
				<container type="vertbox" hsp="expand" vsp="minimum" name="workCrewSelectionBoxContainer"/>
			</container>
			
			<imagebutton name="DemolishBuildingButton"
					   text="Demolish Building"
					   sfx="button_pneumatic"
					   hsp="minimum" vsp="minimum" 
				imageSkin="ui/orderIcons.xml" image="demolish_building" imgPctX="80" imgPctY="80" vertical_margin="8">
				
				<tooltip width="120" height="25" mouseRestDelay="0" followCursor="1">
					<container type="vertbox" hsp="expand" vsp="expand"
							 horizontal_padding="4" vertical_padding="4"
							 solidfill="1" solidfillname="glassBrassBorderDark">
						
						<label name="buttonTooltipLabel" text="Demolish Building" vsp="center" state="tooltip_text"/>
					</container>
				</tooltip>        
			</imagebutton>
		</container>
	</container>
	
	<container type="vertbox" hsp="expand" vsp="minimum" solidfill="1" solidfillname="cecommWorkcrew">
		<container type="vertbox" hsp="expand" vsp="fixed" fixed_height="12"/>
		<container type="vertbox" hsp="fixed" vsp="fixed" fixed_height="45" fixed_width="300" hap="center" solidfill="1" solidfillname="cecommTopGlassLight">
			<container name="workshiftContainer" type="vertbox"
					hsp="fixed" fixed_width="279"
					hap="center" vertical_padding="10" horizontal_padding="10" />
		</container>
		
		<container type="vertbox"
				 hsp="fixed" vsp="fixed"
				 hap="center"
				 horizontal_padding="4" vertical_padding="10"
				 solidfill="1" solidfillname="cecommDarkRoundPaper" fixed_width="400" fixed_height="90" >
			
			<container type="horizbox" hsp="expand" vsp="expand" hap="center">
					
				<container type="vertbox" hsp="expand" vsp="minimum" hap="left"
						vertical_padding="4" horizontal_padding="4"
						horizontal_gutter="1" vap="center" >
				</container>
					
				<container type="horizbox"	vsp="expand" hap="center" vap="center">
					
					<container type="vertbox" hap="center" vap="center" vsp="expand">
						<container name="warningContainer" type="vertbox" hsp="minimum" vsp="minimum" vap="top" hap="center" />
						<container type="vertbox" hap="center" vap="center" vsp="minimum">
							<container type="horizbox" hap="center">
							
								<container type="horizbox" hsp="minimum" vsp="minimum"
										 horizontal_padding="4" horizontal_margin="1"
										 vertical_padding="4" vertical_margin="2"
										 solidfill="1" solidfillname="miniPaperLighter"
										 vap="center">
									
									<label text="Hunting: " vap="center"/>
									
									<image hsp="minimum" vsp="minimum" scale="50"
										  skin="ui\\commodityIcons.xml" image="ammo_stone" vap="center"/>
									<label text="x" vap="center"/>
									<container type="horizbox" hsp="minimum" vsp="minimum" name="workPoints1Container" vap="center"/>
									
									<tooltip width="300" height="1" mouseRestDelay="0" followCursor="1">
										<container type="vertbox" hsp="expand" vsp="minimum"
												 horizontal_padding="6" vertical_padding="6"
												 solidfill="1" solidfillname="glassBrassBorderDarkMoreOpaque" >
											
											<label text="Stone Pellet Ammo: Hunting" hap="center" state="tooltip_text"/>
											<paragraph text="Stone Pellet Ammunition, made in a Ceramics Workshop, is required to do Hunting jobs. This number shows how many shots can be fired by hunters. Workers will resupply the Naturalist's Office if ammunition runs low." state="tooltip_small"/>
										</container>
									</tooltip>
								</container>
								
								<container type="horizbox" hsp="minimum" vsp="minimum"
										 horizontal_padding="4" horizontal_margin="1"
										 vertical_padding="4" vertical_margin="2"
										 solidfill="1" solidfillname="miniPaperLighter"
										 vap="center">
									
									<label text="Surveying: " vap="center"/>
									
									<image hsp="minimum" vsp="minimum" scale="50"
										  skin="ui\\commodityIcons.xml" image="paperBundle" vap="center"/>
									<label text="x" vap="center"/>
									<container type="horizbox" hsp="minimum" vsp="minimum" name="workPoints2Container" vap="center"/>
									
									<tooltip width="290" height="1" mouseRestDelay="0" followCursor="1">
										<container type="vertbox" hsp="expand" vsp="minimum"
												 horizontal_padding="6" vertical_padding="6"
												 solidfill="1" solidfillname="glassBrassBorderDarkMoreOpaque" >
											
											<label text="Stacks of Paper: Surveying" hap="center" state="tooltip_text"/>
											<paragraph text="Stacks of Paper, made in a Carpentry Workshop, are required to do Mineralogical Surveying, 5 per ore beacon. Workers will resupply the office if these run low." state="tooltip_small"/>
										</container>
									</tooltip>
								</container>
							
							</container>
						</container>
						<container name="workPointsStatusContainer" type="vertbox" hsp="fixed" fixed_width="150" vsp="minimum" vap="bottom" hap="center" />
					</container>
					
				</container>
				
				<container type="vertbox" hsp="minimum" vsp="minimum"
						vertical_padding="0" horizontal_padding="2"
						horizontal_gutter="2" vertical_margin="-2"
						hap="right">
					
					<container type="vertbox" hsp="minimum" vsp="minimum" name="supplyControlContainer1" />
					<container type="vertbox" hsp="minimum" vsp="minimum" name="supplyControlContainer2" />
				</container>
				
			</container>
			
		</container>

		<container type="vertbox" hsp="expand" vsp="fixed" fixed_height="8"/>
		<!-- main content box -->
		<container type="vertbox" hsp="expand" vsp="minimum">
			<container type="vertbox"
					 hsp="expand" vsp="minimum"
					 hap="center"
					 horizontal_gutter="1" horizontal_padding="5" >
								
				<container type="vertbox" hsp="expand" vsp="minimum">
					
					<container type="horizbox" hsp="expand" vsp="minimum"
							horizontal_padding="2" vertical_padding="2">
						
						<container type="horizbox" hsp="minimum" vsp="minimum" name="modeControlsContainer" hap="left">
							<container type="horizbox" hsp="minimum" vsp="minimum" horizontal_gutter="2" hap="center">
								
								<container type="vertbox" hsp="minimum" vsp="minimum">
									<container type="vertbox" hsp="minimum" vsp="minimum" name="modeControlsContainer1" >
										
										<tooltip width="200" height="1" mouseRestDelay="0" followCursor="1" skin="ui/styles/styleTooltip.xml">
											<container type="vertbox" hsp="fixed" fixed_width="200"
													horizontal_padding="5" vertical_padding="5"
													solidfill="1" solidfillname="glassBrassBorderDark" >
												
												<paragraph text="Scouting: The Naturalist and their assigned Labourers will be given greatly increased sight radius and will explore randomly. Useful to provide an overview of the local area. Skilled Naturalists can see further." alignment="left" state="tooltip_text"/>
											</container>
										</tooltip>
									</container>
								</container>
								
								<container type="vertbox" hsp="minimum" vsp="minimum">
									<container type="vertbox" hsp="minimum" vsp="minimum" name="modeControlsContainer2">
										<!--<tooltip width="200" height="1" mouseRestDelay="0" followCursor="1" skin="ui/styles/styleTooltip.xml">
											<container type="vertbox" hsp="fixed" fixed_width="240"
													horizontal_padding="5" vertical_padding="5"
													solidfill="1" solidfillname="glassBrassBorderDark" >
												
												<label text="Hunting " state="tooltip_text" hap="center"/>
												<paragraph text="The Naturalist and workcrew will hunt nearby wildlife. If they cannot find any animals to hunt, they will attempt to flush out wild game. Skilled Naturalists will find more success." alignment="left" state="tooltip_text"/>
											</container>
										</tooltip>-->
									</container>
								</container>
								
								<container type="vertbox" hsp="minimum" vsp="minimum">
									<container type="vertbox" hsp="minimum" vsp="minimum" name="modeControlsContainer3">
										<!--<tooltip width="200" height="1" mouseRestDelay="0" followCursor="1" skin="ui/styles/styleTooltip.xml">
											<container type="vertbox" hsp="fixed" fixed_width="240"
													horizontal_padding="5" vertical_padding="5"
													solidfill="1" solidfillname="glassBrassBorderDark" >
												
												<label text="Mineral Surveying " state="tooltip_text" hap="center"/>
												<paragraph text="The Naturalist and workcrew will survey designated ore veins to reveal their contents, or will survey randomly if left to their own devices. This provides useful information for establishing mines. Skilled Naturalists can survey faster." alignment="left" state="tooltip_text"/>
											</container>
										</tooltip>-->
									</container>
								</container>
								
							</container>
						</container>
						
						<container type="horizbox" hsp="expand" vsp="expand"
								horizontal_padding="2" vertical_padding="10"
								solidfill="1" solidfillname="miniPaper">
							
							<container type="vertbox" hsp="expand">
								<container type="vertbox" hsp="minimum" vsp="minimum" hap="center">
									<label text="Naturalist Job Focus:" vertical_margin="2" horizontal_margin="4" state="text_large" />
								</container>
								<container type="vertbox" hsp="expand" vsp="minimum" name="modeLabelContainer" hap="left"/>
							</container>
							
							<tooltip width="200" height="1" mouseRestDelay="0" followCursor="1" skin="ui/styles/styleTooltip.xml">
								<container type="vertbox" hsp="fixed" fixed_width="200"
										horizontal_padding="5" vertical_padding="5"
										solidfill="1" solidfillname="glassBrassBorderDark" >
									
									<!--<label text="Naturalist " state="tooltip_text" hap="center"/>-->
									<paragraph text="The Naturalist can be set to focus on different jobs depending on what your Colony requires. Select Job Focus using the buttons to the right." alignment="left" state="tooltip_text"/>
								</container>
							</tooltip>
						</container>
					</container>

					<container type="horizbox" hsp="expand" vsp="fixed" fixed_height="10"/>
					<container type="horizbox" solidfill="1" solidfillname="cecommDarkRoundPaper" hap="center" horizontal_padding="50" vertical_padding="10">
						<label text="Manual Job Targeting" hap="center" state="text"/>
						
						<tooltip width="200" height="1" mouseRestDelay="0" followCursor="1" skin="ui/styles/styleTooltip.xml">
							<container type="vertbox" hsp="fixed" fixed_width="200"
									horizontal_padding="5" vertical_padding="2"
									solidfill="1" solidfillname="glassBrassBorderDark" >
								
								<paragraph text="Naturalists will automatically pick targets for their jobs, but if you find yourself wanting to target a specific location or animal, you may use the buttons below to do so."
										 alignment="left" state="tooltip_text"/>
							</container>
						</tooltip>
					</container>
					<container type="horizbox" hsp="minimum" vsp="minimum" hap="center">
						
						<container name="naturalistCommandHolder1"
								type="horizbox" hsp="expand" vsp="minimum"
								horizontal_margin="1"
								vertical_padding="0"
								/>
						<container name="naturalistCommandHolder2"
								type="horizbox" hsp="expand" vsp="minimum"
								horizontal_margin="1"
								vertical_padding="0"
								/>
						<container name="naturalistCommandHolder3"
								type="horizbox" hsp="expand" vsp="minimum"
								horizontal_margin="1"
								vertical_padding="0"
								/>
					</container>
					<container type="horizbox" hsp="expand" vsp="fixed" fixed_height="10"/>
					
					<container type="horizbox" hsp="expand" vsp="minimum"
							horizontal_padding="2" vertical_padding="2">
						
						<container type="horizbox" hsp="expand" vsp="expand"
								horizontal_padding="2" vertical_padding="10"
								solidfill="1" solidfillname="miniPaper">
							
							<container type="vertbox" hsp="expand">
								<container type="vertbox" hsp="minimum" vsp="minimum" hap="center">
									<label text="Unnatural Encounters:" vertical_margin="2" horizontal_margin="4" state="text_large" />
								</container>
								<container type="vertbox" hsp="expand" vsp="minimum" name="horrorPolicyLabelContainer" hap="left"/>
							</container>
							
							<tooltip width="200" height="1" mouseRestDelay="0" followCursor="1" skin="ui/styles/styleTooltip.xml">
								<container type="vertbox" hsp="fixed" fixed_width="200"
										horizontal_padding="5" vertical_padding="2"
										solidfill="1" solidfillname="glassBrassBorderDark" >
									
									<paragraph text="It has been said that Strange and Unnatural beings may be encountered on the Frontier. The Colonial Ministry denies these allegations, so it is effectively up to each Colonial Bureaucrat to decide how to 'deal with' such phenomena."
											 alignment="left" state="tooltip_text"/>
								</container>
							</tooltip>
						</container>
						
						<container type="horizbox" hsp="minimum" vsp="minimum" name="modeControlsContainer" hap="left">
							<container type="horizbox" hsp="minimum" vsp="minimum" horizontal_gutter="2" hap="center">
								
								<container type="vertbox" hsp="minimum" vsp="minimum">
									<container type="vertbox" hsp="minimum" vsp="minimum"
											 name="horrorPolicyContainer1"/>
								</container>
								
								<container type="vertbox" hsp="minimum" vsp="minimum">
									<container type="vertbox" hsp="minimum" vsp="minimum"
											 name="horrorPolicyContainer2"/>
								</container>
								
								<container type="vertbox" hsp="minimum" vsp="minimum">
									<container type="vertbox" hsp="minimum" vsp="minimum"
											 name="horrorPolicyContainer3"/>
								</container>
								
							</container>
						</container>
						
					</container>
				</container>
				
			</container>
		</container>
		
	</container>
	
	<container type="horizbox" vsp="fixed" fixed_height="50" hsp="expand" horizontal_margin="15" solidfill="1" solidfillname="cecommPaperRoundInsideNoTop" vertical_padding="0" horizontal_padding="5" >
		
		<!-- row 1 -->
		<container type="horizbox" hsp="expand" vsp="expand"
				 horizontal_gutter="6"
				 horizontal_margin="2" vertical_margin="0"
				 horizontal_padding="6" vertical_padding="2">
		
			<!-- HP display -->
			<container type="horizbox" hsp="minimum" vsp="expand"
					 horizontal_padding="2"
					 vertical_padding="2"
					 vap="center" >
				
				<label text="HP:" vap="center"/>

				<container type="horizbox"
						 hsp="minimum" vsp="minimum"
						  horizontal_padding="8"
						  horizontal_margin="4" 
						   vertical_padding="4"
						   vertical_margin="8"
						 solidfill="1" solidfillname="miniPaperRound">
					
					<container name="HPNumberContainer" type="horizbox" hsp="minimum" vsp="minimum" vap="center"/>
					<label text="/" vap="center" />
					<container name="HPMaxContainer" type="horizbox" hsp="minimum" vsp="minimum" vap="center"/>
					
				</container>
				
				<tooltip width="200" height="1" mouseRestDelay="0" followCursor="1" skin="ui/styles/styleTooltip.xml">
					<container type="vertbox" hsp="fixed" fixed_width="200"
							horizontal_padding="5" vertical_padding="5"
							solidfill="1" solidfillname="glassBrassBorderDark" >
						
						<label text="Building Hitpoints" state="tooltip_text" hap="center"/>
						<paragraph text="When a building reaches 0 HP, it is destroyed. Repair jobs are automatically created when a building is damaged and will be taken up by available Overseers." alignment="left" state="tooltip_text"/>
					</container>
				</tooltip>
			</container>
		</container>
		
		<!-- Quality -->
		<container type="horizbox"
				 hsp="minimum" vsp="expand"
				 horizontal_margin="8" vertical_margin="0"
				 horizontal_padding="0" vertical_padding="0">
			
			<container type="vertbox" hsp="minimum" vsp="minimum" vap="center"
					 horizontal_padding="8"
					 hap="left">
				
				<label text="Quality:" vap="center" />
			</container>
			
			<container type="vertbox" hsp="minimum" vsp="minimum" vap="center"
						horizontal_padding="10" vertical_padding="4"
						solidfill="1"  solidfillname="miniPaperRound">
			
				<container type="vertbox" hsp="minimum" vsp="minimum"
						 vap="center"
						 name="qualityNumberContainer" />
						 
			</container>
	
			<tooltip width="260" height="1" mouseRestDelay="0" followCursor="1" skin="ui/styles/styleTooltip.xml">
				<container type="vertbox" hsp="fixed" fixed_width="250" horizontal_padding="4" vertical_padding="4" vertical_gutter="4" solidfill="1" solidfillname="glassBrassBorderDark">
					<container type="horizbox" hsp="minimum" vsp="minimum">
						<label text="Quality:" state="text" />
						<container name="qualityDescriptionContainer"
								 type="horizbox" hsp="minimum" vsp="minimum"
								 vertical_padding="2" horizontal_padding="4"
								 vap="center" />
						
					</container> 
					<container type="vertbox" hsp="fixed" fixed_width="250">
							<paragraph text="- Building Quality can range from -6 to +6" alignment="left" state="tooltip_text"/>
							<paragraph text="- Work Modules reduce quality, while decor modules increase quality" alignment="left" state="tooltip_text"/>
							<paragraph text="- High workplace quality makes colonists happy." alignment="left" state="tooltip_text"/>
					</container>
				</container>
			</tooltip>
		</container>
	</container>
	<container type="vertbox" hsp="fixed" fixed_width="400" hap="center" vsp="fixed" fixed_height="20" vertical_padding="6" vertical_gutter="3" horizontal_padding="4" solidfill="1" solidfillname="cecommBottomGlass" />
</container>	
